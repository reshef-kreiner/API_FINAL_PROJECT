<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray"
    android:gravity="center">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/antic_didone"
        android:gravity="center"
        android:text="@string/main_page_title"
        android:textColor="@color/text_blue"
        android:textSize="60sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/cimena_image"
            android:layout_width="67dp"
            android:layout_height="104dp"
            android:src="@drawable/movie_icon_text_blue"
            android:layout_margin="20dp" />

        <ImageView
            android:id="@+id/popcorn_image"
            android:layout_width="67dp"
            android:layout_height="104dp"
            android:src="@drawable/popcorn_icon_text_blue"
            android:layout_margin="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/welcoming_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andika_new_basic"
        android:text="@string/welcome_string"
        android:textAlignment="center"
        android:textColor="@color/text_blue"
        android:textSize="24sp"
        android:layout_marginTop="40dp" />

</LinearLayout>
